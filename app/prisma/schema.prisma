generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  username    String
  role        String
  password    String?  @unique
  email       String   @unique
  name        String?
  createdAt   DateTime @default(now())
  clerkUserId String   @unique
  rating      Int      @default(0)
  phoneNumber String?
}

model item {
  id            Int        @id @default(autoincrement())
  name          String
  description   String?
  ownerId       Int
  categoryId    Int
  creatorName   String
  type          String
  imageUrl      String?
  creatorPhone  String
  receiverPhone String
  neighborhood  String
  status        ItemStatus
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  clerkUserId   String
}

model message {
  id          Int    @id @default(autoincrement())
  title       String
  toUser      Int
  clerkUserId String
  message     String
}

enum ItemStatus {
  AVAILABLE
  DONE
}

enum ItemType {
  ITEM
  FAVOR
}
